<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <webapi>
            <logger>
                <enable>1</enable>
                <save_path>webapi_rest</save_path>
            </logger>
            <email_notifier>
                <enable>0</enable>
                <email_template>webapi_email_notifier_email_template</email_template>
                <cron_schedule>*/15 * * * *</cron_schedule>
            </email_notifier>
        </webapi>
    </default>
</config>
